<Project>
  <PropertyGroup>
    <_ImmersiveTaskTfm Condition="'$(MSBuildRuntimeType)' == 'Full'">net48</_ImmersiveTaskTfm>
    <_ImmersiveTaskTfm Condition="'$(MSBuildRuntimeType)' != 'Full'">net10.0</_ImmersiveTaskTfm>
  </PropertyGroup>
  <UsingTask TaskName="Allors.Immersive.Weaver.ImmersiveTask" AssemblyFile="$(MSBuildThisFileDirectory)..\lib\$(_ImmersiveTaskTfm)\Allors.Immersive.Weaver.dll" />
  <Target Name="Immersive" AfterTargets="Compile">
    <ImmersiveTask AssemblyPath="$(TargetPath)" SearchDirectories="@(ReferencePath)" />
  </Target>
</Project>
